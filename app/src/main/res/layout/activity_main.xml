<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:id="@+id/mainLayout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/can_you_solve_the_chemystery"
        android:layout_gravity="center"
        android:textSize="25sp"
        android:id="@+id/title"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/settingsicon"
        android:layout_marginStart="325dp"
        android:id="@+id/settingsButton"
        android:onClick="settingsButtonClicked"
        android:contentDescription="@string/settings_cog" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/add_your_username_here"
        android:id="@+id/userNameBox"
        android:layout_gravity="center"
        android:autofillHints="name"
        android:inputType="textCapSentences|textAutoCorrect" />
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/spinner1"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_quiz"
        android:layout_gravity="center"
        android:id="@+id/openQuizButton"
        android:onClick="openQuizClicked"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/high_scores"
        android:layout_gravity="center"
        android:id="@+id/highScoresButton"
        android:onClick="highSCoresButtonClicked"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/test_your_skills_in_this_fun_chemistry_quiz"
        android:layout_gravity="center"
        android:textSize="30sp"
        android:id="@+id/subtitle"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/chemteacher"
        android:contentDescription="@string/chemistry_teacher" />


</LinearLayout>